{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingComma": "all",
			"arrowParentheses": "always",
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useSelfClosingElements": "off",
				"noNonNullAssertion": "off"
			},
			"correctness": {
				"noUnsafeOptionalChaining": "off"
			},
			"complexity": {
				"useOptionalChain": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	}
}
